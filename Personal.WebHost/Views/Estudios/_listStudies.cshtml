@model IEnumerable<BussinessEntity.SG_PERSONA_ESTUDIOS>

<div class="aux-tabcontent">
    <div class="gridcontainer">
        <table id="gridQueryDOM" class="table-adjust-texto">
            <thead>
                <tr>
                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(m => m.MA_INSTITUCION.V_DES_INSTITUCION)</a>
                    </th>
                    @*m.FirstOrDefault().clsSpecialityEducational.V_DES_ESPECIALIDAD_EDUCATIVA*@

                    <th style="width:120px">
                        <a href="#">@Html.DisplayNameFor(m => m.MA_INSTITUCION.MA_TIPO_ENTIDAD.V_DES_ENTIDAD)</a>
                    </th>
                    @*m.FirstOrDefault().clsSpecialityEducational.V_DES_ESPECIALIDAD_EDUCATIVA*@
                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(m => m.MA_INSTITUCION.MA_TIPO_INSTITUCION.V_DES_TIPO_INSTITUCION)</a>
                    </th>
                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(m => m.MA_CARRERA_PROFESIONALES.V_DES_CARRERA_PROFESIONAL)</a>
                    </th>
                    <th style="width:150px">
                        <a href="#">@Html.DisplayNameFor(m => m.MA_GRADO_ACADEMICO.V_DES_GRADO_ACADEMICO)</a>
                    </th>
                    <th style="width:120px">
                        <a href="#">@Html.DisplayNameFor(m => m.C_ACTIVO)</a>
                        <div class="search" id="tableSearch" title="Buscar">
                            <a>
                                <img src="../Images/ico-search.png">
                            </a>
                        </div>
                    </th>
                </tr>
            </thead>

            <tbody>
                @{int i = -1;}
                @foreach (var item in Model)
                {
                    i++;
                    var style = "class=not-active-row-td";
                    if (i == 0)
                    {
                        style = "class=active-row-select";
                    }
                    <tr @style>
                        <td class="active-row-td">
                            <span class="rowId select" style="display: none;">@Html.DisplayFor(modelItem => item.I_COD_PERSONA_ESTUDIOS)</span>
                            <span class="select">@Html.DisplayFor(modelItem => item.MA_INSTITUCION.V_DES_INSTITUCION) </span>

                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_INSTITUCION.MA_TIPO_ENTIDAD.V_DES_ENTIDAD)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_INSTITUCION.MA_TIPO_INSTITUCION.V_DES_TIPO_INSTITUCION)</span>
                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_CARRERA_PROFESIONALES.V_DES_CARRERA_PROFESIONAL)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_GRADO_ACADEMICO.V_DES_GRADO_ACADEMICO)</span>
                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.C_ACTIVO)</span>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
</div>