@model IEnumerable<Personal.ViewModels.DetallePersonal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script src="~/Scripts/animation/SlidePointJS.js"></script>
<h1 class="itemtitle">Empleados</h1>

<div class="itemList">
    <ul style="width: 50%;">
        <li class="itemList-img">
            <img src="../Images/ico-tab-pane-.png">
        </li>
        <li class="itemList-active" tabindex="0" data-href="/Estudios/_listStudies">Activo</li>
        <li tabindex="1" data-href="/Estudios/_listStudies">Inactivos</li>
    </ul>
</div>
@*una interfaz para dar de baja}}
    -.---

    EL TECNICO ROJAS DE ARCHIVO FUE DADO DE BAJO PERO QUEDA SABILITADO PERO
    PARA VOLVER A TRABAJAR TIENE QUE DE NUEVO SER CONTRATADO POR UNA MODALIDAD*@
<div class="form-content">
    <div class="form-row">
        <div class="form-row">
            <div class="form-inline-text-input" style="width:auto">
                @Html.DropDownList("cboTribunales", (SelectList)ViewBag.instanciaPorTipoInstitucion, "Tribunales", new { @class = "widthAuto", @style = "width: 816px;position:relative;top:7px;" })
                @*http://miiquel.com/demo/css3-checkbox-radio/*@
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-row-cell" id="divFilters">
            @Html.DropDownList("cboTipoModalidadFilter", new SelectList(new List<SelectListItem>()), "Tipo Modalidad", new { @class = "widthAuto", @style = "display:none" })
            @Html.DropDownList("cboInstitucionFilter", (SelectList)ViewBag.institucion, "Institucion", new { @class = "widthAuto", @style = "display:none" })
            @Html.DropDownList("cboGradoMilitarFilter", new SelectList(new List<SelectListItem>()), "Grado Militar", new { @class = "widthAuto", @style = "display:none" })
            @Html.DropDownList("cboSituacionMilitarFilter", (SelectList)ViewBag.situacionMilitar, "Situacion", new { @class = "widthAuto", @style = "display:none" })
            <input type="button" value="" class="button-blue-filter" id="btnBuscar" />
        </div>
    </div>
</div>


<div class="aux-tabcontent">
    <div class="gridcontainer">
        <table id="gridQuerysEmployees">
            <thead>
                <tr>

                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(model => model.vEmpleado)</a>
                    </th>
                    <th style="width:250px">
                        <a href="#">@Html.DisplayNameFor(model => model.vDNI)</a>
                    </th>

                    <th style="width:250px">
                        <a href="#">@Html.DisplayNameFor(model => model.vGrado)</a>
                    </th>
                    <th style="width:250px">
                        <a href="#">@Html.DisplayNameFor(model => model.vArma)</a>
                    </th>
                    <th style="width:250px">
                        <a href="#">@Html.DisplayNameFor(model => model.vCargo)</a>
                    </th>
                    <th style="width:250px">
                        <a href="#">@Html.DisplayNameFor(model => model.vSexo)</a>
                    </th>
                    <th style="width:120px">
                        <a href="#">@Html.DisplayNameFor(model => model.vActivo)</a>
                        <div class="search" id="tableSearch" title="Buscar">
                            <a>
                                <img src="../Images/ico-search.png">
                            </a>
                        </div>
                    </th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="not-active-row-td">
                        <td class="active-row-td">
                            <span class="rowId select" style="display: none;">@Html.HiddenFor(modelItem => item.iCodigoPersona)</span>
                            <span class="select">@Html.DisplayFor(modelItem => item.vEmpleado)</span>

                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.vDNI) </span>
                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.vGrado)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.vArma) </span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.vCargo)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.vSexo)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.vActivo)</span>
                        </td>

                    </tr>
                }

            </tbody>

        </table>

    </div>
</div>

<script src="~/Scripts/pages/EmployeesJS/Index.js"></script>
