                                                    <td>
                                                        <span>@Html.DisplayFor(modelItem => itemCursos.clsPeopleCharge.D_FEC_INGRESO)</span>
                                                    </td>
                                                    <td>
                                                        <span>@Html.DisplayFor(modelItem => itemCursos.clsPeopleCharge.D_FEC_BAJA)</span>
                                                    </td>
                                                    <td>
                                                        <span>@Html.DisplayFor(modelItem => itemCursos.clsPeopleCharge.C_ACTIVO)</span>
                                                    </td>
                                                    <td></td>
                                                </tr>

                                            }
                                        </tbody>

                                    </table>
