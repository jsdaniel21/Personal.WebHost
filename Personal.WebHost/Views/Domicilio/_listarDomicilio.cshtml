@model IEnumerable<Personal.ViewModels.listDomicilioPersonaVM>
<div class="aux-tabcontent">
    <div class="gridcontainer">

        <table id="gridQueryDOM" class="table-adjust-texto">
            <thead>
                <tr>

                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().MA_PAI.V_DES_PAIS)</a>
                    </th>
                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().MA_DEPARTAMENTO.V_DES_DEPARTAMENTO)</a>
                    </th>

                    <th style="width:150px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().MA_PROVINCIA.V_DES_PROVINCIA)</a>
                    </th>
                    <th style="width:150px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().MA_DISTRITO.V_DES_DISTRITO)</a>
                    </th>
                    <th style="width:120px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().MA_TIPO_DOMICILIO.V_DES_TIPO_DOMICILIO)</a>
                        <div class="search" id="tableSearch" title="Buscar">
                            <a>
                                <img src="../Images/ico-search.png">
                            </a>
                        </div>
                    </th>
                </tr>
            </thead>

            <tbody>
                @{int i = -1;}
                @foreach (var item in Model)
                {
                    i++;
                    var style = "class=not-active-row-td";
                    if (i == 0)
                    {
                        style = "class=active-row-select";
                    }
                    <tr @style>
                        <td class="active-row-td">
                            <span class="rowId select" style="display: none;">@Html.DisplayFor(m => item.RRHH_PERSONA_DOMICILIO.I_COD_PERSONA_DOMICILIO)</span>
                            <span class="select">@Html.DisplayFor(m => item.MA_PAI.V_DES_PAIS)</span>

                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_DEPARTAMENTO.V_DES_DEPARTAMENTO)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_PROVINCIA.V_DES_PROVINCIA)</span>
                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_DISTRITO.V_DES_DISTRITO)</span>
                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.MA_TIPO_DOMICILIO.V_DES_TIPO_DOMICILIO)</span>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
</div>