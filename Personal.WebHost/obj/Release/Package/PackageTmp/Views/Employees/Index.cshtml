@model IEnumerable<BussinessEntity.RRHH_PERSONA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<script src="~/Scripts/animation/SlidePointJS.js"></script>
<h1 class="itemtitle">Empleados</h1>
<div class="itemList">
    <ul style="z-index: -4; width: 50%">
        <li class="itemList-img">
            <img src="../Images/ico-tab-pane-.png">
        </li>
        <li class="itemList-active" tabindex="0">Consultar</li>
        <li tabindex="1" style="display: none">Modificar</li>

    </ul>
</div>
<div class="aux-tabcontent">
    <div class="gridcontainer">
        <table id="gridQuerysEmployees">
            <thead>
                <tr>
                    <th class="active-col" style="width:190px">
                        <a href="#">@Html.DisplayNameFor(model => model.V_APELLIDO_PATERNO)</a>
                    </th>
                    <th style="width:180px">
                        <a href="#" >@Html.DisplayNameFor(model => model.V_APELLIDO_MATERNO)</a>
                    </th>
                    <th style="width:250px">
                        <a href="#">@Html.DisplayNameFor(model => model.V_NOMBRES)</a>
                    </th>
                    <th style="width:120px">
                        <a href="#">@Html.DisplayNameFor(model => model.C_ACTIVO)</a>
                        <div class="search" id="tableSearch" title="Buscar">
                            <a>
                                <img src="../Images/ico-search.png">
                            </a>
                        </div>
                    </th>
                </tr>
            </thead>

            <tbody>
 
                @foreach (var item in Model)
                {
                    <tr class="not-active-row-td">
                        <td class="active-row-td">
                            <span class="rowId select" style="display: none;">@Html.HiddenFor(modelItem => item.C_COD_PERSONA)</span>
                            <span class="select">@Html.DisplayFor(modelItem => item.V_APELLIDO_PATERNO)</span>

                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.V_APELLIDO_MATERNO) </span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.V_NOMBRES)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.C_ACTIVO)</span>
                        </td>

                    </tr>
                }

            </tbody>

        </table>

    </div>
</div>

<script src="~/Scripts/pages/EmployeesJS/Index.js"></script>
