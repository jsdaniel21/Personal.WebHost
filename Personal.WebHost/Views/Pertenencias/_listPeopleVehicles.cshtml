@model IEnumerable<Personal.ViewModels.listPeopleVehiclesVM>


<h1 class="itemtitle">Vehiculos</h1>
<div class="itemList">
    <ul style="z-index: -4; width: 50%">
        <li class="itemList-img">
            <img src="../Images/ico-tab-pane-.png">
        </li>
        <li class="itemList-active" tabindex="0">Consultar</li>
        <li tabindex="1" style="display: none">Modificar</li>

    </ul>
</div>
@Html.Hidden("codMenu", (string)ViewBag.codMenu)

<div class="aux-tabcontent">
    <div class="gridcontainer">

        <table id="gridQueryStudies" class="table-adjust-texto">
            <thead>
                <tr>



                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().clsBrandVehicles.V_DES_MARCA_VEHICULO)</a>
                    </th>

                    <th style="width:150px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().clsModelVehicles.V_DES_MODELO_VEHICULOS)</a>
                    </th>
                    <th style="width:180px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().clsColor.V_DES_COLOR)</a>
                    </th>
                    <th style="width:150px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().clsPeopleVehicles.V_DES_PLACA)</a>
                    </th>
                    <th style="width:120px">
                        <a href="#">@Html.DisplayNameFor(m => m.FirstOrDefault().clsPeopleVehicles.D_FEC_REGISTRO)</a>
                        <div class="search" id="tableSearch" title="Buscar">
                            <a>
                                <img src="../Images/ico-search.png">
                            </a>
                        </div>
                    </th>
                </tr>
            </thead>

            <tbody>
                @{int i = -1;}
                @foreach (var item in Model)
                {
                    i++;
                    var style = "class=not-active-row-td";
                    if (i == 0)
                    {
                        style = "class=active-row-select";
                    }
                    <tr @style>
                        <td class="active-row-td">
                            <span class="rowId select" style="display: none;">@Html.DisplayFor(m => item.clsPeopleVehicles.I_COD_PERSONA_VEHICULOS)</span>
                            <span>@Html.DisplayFor(modelItem => item.clsBrandVehicles.V_DES_MARCA_VEHICULO)</span>

                        </td>

                        <td>
                            <span>@Html.DisplayFor(modelItem => item.clsModelVehicles.V_DES_MODELO_VEHICULOS)</span>
                        </td>
                        <td>

                            <span>@Html.DisplayFor(modelItem => item.clsColor.V_DES_COLOR)</span>
                        </td>
         
                        <td>
                            <span class="select">@Html.DisplayFor(m => item.clsPeopleVehicles.V_DES_PLACA)</span>
                        </td>
                        <td>
                            <span>@Html.DisplayFor(modelItem => item.clsPeopleVehicles.D_FEC_REGISTRO)</span>
                        </td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
</div>

@*<script src="~/Scripts/pages/EstudiesJS/listEstudiesJS.js"></script>*@