                                                </th>
                                                <th style="width:120px">
                                                    <a href="#">@Html.DisplayNameFor(m => m.DefaultCargoPersonal.clsPeopleCharge.C_ACTIVO)</a>
                                                </th>
                                                <th>

                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var itemCursos in Model.personaCargos)
