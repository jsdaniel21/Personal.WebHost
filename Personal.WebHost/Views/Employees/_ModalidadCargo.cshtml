@model  Personal.ViewModels.ModalidadPersonal

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="tabcontent-form" data-page="1">
        <div class="form">
            <div class="form-inline-content">
                @Html.LabelFor(model => model.tipoEmpleado.V_DES_TIPO_EMPLEADO, new { @class = "form-inline-text-input" })
                @Html.DropDownListFor(model => model.tipoEmpleado.I_COD_TIPO_EMPLEADO, new SelectList(new List<SelectListItem>()), "--SELECT--")
            </div>
            <div class="form-inline-content">
                @Html.LabelFor(model => model.tipoModalidad.V_DES_TIPO_MODALIDA, new { @class = "form-inline-text-input" })
                @Html.DropDownListFor(model => model.tipoModalidad.I_COD_TIPO_MODALIDAD, new SelectList(new List<SelectListItem>()), "--SELECT--")
            </div>
        </div>
    </div>



}
